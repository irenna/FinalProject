<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtRecipient"
            android:text="John Smith"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgTextStatus"
            android:src="@drawable/ic_done_white_24dp"
            android:background="#ff0a0a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTextStatus"
            android:textColor="@android:color/black"
            android:text="Send success!" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jan. 1st 1999 6:00pm"
            android:id="@+id/txtDueDate"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:singleLine="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitle"
            android:text="Title goes here"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMessage"
            android:textColor="@android:color/black"
            android:text="the quick brown fox jumped over the slow lazy dog.  The quick brown fox jumped over the slow lazy dog."
            android:singleLine="false" />

    </LinearLayout>


</LinearLayout>